<%-include('./partials/admin_header')-%>
<link rel="stylesheet" href="/css_files/admin_tableview_style.css">
<%-include('./partials/admin_sidebar')-%>

<h1>Enrollment</h1>
<div class="main_content_container">
    <table>
        <tr>
            <th>Class</th>
            <th>Teacher</th>
            <th>Program</th>
            <th></th>
        </tr>
        <%classList.forEach(classes => {%>
        <tr>
            <td><%= classes.className %></td>
            <td><%= classes.teacherAssigned %></td>
            <td><%= classes.program %></td>
            <td><a href="/enrollment/class?id=<%= classes.id %>"><button>Advanced View</button></a></td>
        </tr>
        <%})%>
    </table>
 
</div>

<%-include('./partials/admin_footer') -%>